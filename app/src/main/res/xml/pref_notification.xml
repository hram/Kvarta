<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <SwitchPreference
        android:key="pref_remind_enable"
        android:title="@string/pref_title_enable_remind"
        android:summary="@string/pref_description_enable_remind"
        android:defaultValue="true" />

    <!--
    <SwitchPreference
        android:key="pref_manual_date"
        android:title="@string/pref_title_manual_data"
        android:summary="@string/pref_description_manual_data"
        android:defaultValue="false"
        android:dependency="pref_enable_remind"/>
    -->
    <hram.kvarta.NumberPickerPreference
        android:key="pref_remind_date"
        android:title="@string/pref_title_date"
        android:defaultValue="26"
        android:dependency="pref_remind_enable"/>

